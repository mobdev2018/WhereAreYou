<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RecordActivity">

    <RelativeLayout
        android:id="@+id/rlRecordButtons"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/btn_mic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mic"/>

        <ImageButton
            android:id="@+id/btn_stop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stop"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlRecordButtons"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:text="Tap the mic and yell,"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:text="@string/whereareyou"/>

    <TextView
        android:id="@+id/txtVoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16sp"
        android:text="No voice"/>

    <Button
        android:id="@+id/btn_test"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_border_button"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Test mode"/>


</RelativeLayout>