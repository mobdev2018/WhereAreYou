<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ColorsActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="Colors"/>

            <Button
                android:id="@+id/btn_blue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/blue_round_button"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:text="Blue"/>

            <Button
                android:id="@+id/btn_orange"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/orange_round_button"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:text="Orange"/>

            <Button
                android:id="@+id/btn_pink"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/pink_round_button"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:text="Pink"/>

            <Button
                android:id="@+id/btn_red"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/red_round_button"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:text="Red"/>

            <Button
                android:id="@+id/btn_green"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/green_round_button"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:text="Green"/>

            <Button
                android:id="@+id/btn_white"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_round_button"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:text="White"/>

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_border_button"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:text="Continue"/>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>